   private void AddbtnActionPerformed(java.awt.event.ActionEvent evt) {                                       
        try {
            String Name,EmailID,Contact,Country;
            Name=txtName.getText();
            EmailID=txtEmail.getText();
            Contact=txtContact.getText();
            Country=txtCountry.getText();
            
            pat=con.prepareStatement("insert into records(Name,EmailID,Contact,Country)values(?,?,?,?)");
            pat.setString(1,Name);
            pat.setString(2,EmailID);
            pat.setString(3,Contact);
            pat.setString(4,Country);
            pat.executeUpdate();
            JOptionPane.showMessageDialog(this,"Records Added");
            txtName.setText("");
            txtEmail.setText("");
            txtContact.setText("");
            txtCountry.setText("");
            txtName.requestFocus();
        } catch (SQLException ex) {
            Logger.getLogger(NewJFrame.class.getName()).log(Level.SEVERE, null, ex);
        }
    }             
